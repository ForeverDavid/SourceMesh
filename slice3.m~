function slice3()

f_c   = gcf;
f     = figure;
a(1)  = subplot(1,3,1);
a(2)  = subplot(1,3,2); 
a(3)  = subplot(1,3,3); 


% Identify axes to be copied 
axes_to_be_copied = findobj(f_c,'type','axes'); 

% Identify the children of this axes 
children = get(axes_to_be_copied,'children'); 

% functional data
overlay = get(children{2}(end),'FaceVertexCData');

% set views:
v{1} = [0 270];
v{2} = [90  0];
v{3} = [0  90];

% Copy the children of the axes 
for k = 1:3
    this = a(k);
    for i = 1:length(children)
        stuff = handle2struct(children{i});
        
        struct2handle(stuff,this)
        %copyobj(stuff,this); hold on;
        set(f,'currentaxes',this);
        set(gca,'visible','off');        
    end
    % Set the limits and orientation of the subplot as the original figure
    set(this,'Xlim',get(axes_to_be_copied(2),'XLim')) ;
    set(this,'Ylim',get(axes_to_be_copied(2),'YLim')) ;
    set(this,'Zlim',get(axes_to_be_copied(2),'ZLim')) ;
    
    temp = allchild(a(1));
    set(temp(end-1),'FaceVertexCData',overlay);
    
    
    view(a1,v{k});
    
end

set(f, 'Position', [100, 100, 2300, 600])

